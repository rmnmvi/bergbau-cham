                </p>
            </div>
        </div>
    </footer>

    <script>
        function toggleMobileMenu() {
            const menu = document.getElementById('mobileMenu');
            menu.classList.toggle('hidden');
        }

        function toggleFAQ(button) {
            const content = button.nextElementSibling;
            const icon = button.querySelector('svg');

            content.classList.toggle('hidden');
            icon.classList.toggle('rotate-180');
        }

        function toggleLanguageDropdown(event) {
            event.preventDefault();
            const dropdown = document.getElementById('langDropdown');
            const arrow = document.getElementById('langDropdownArrow');

            dropdown.classList.toggle('hidden');
            arrow.classList.toggle('rotate-180');
        }

        // Close language dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const dropdown = document.getElementById('langDropdown');
            const button = event.target.closest('button[onclick="toggleLanguageDropdown(event)"]');

            if (!button && dropdown && !dropdown.classList.contains('hidden')) {
                dropdown.classList.add('hidden');
                document.getElementById('langDropdownArrow').classList.remove('rotate-180');
            }
        });

        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>