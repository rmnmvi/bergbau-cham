<!DOCTYPE html>
<html lang="{{#if isFrench}}fr{{else}}en{{/if}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{meta.title}}</title>
    <meta name="description" content="{{meta.description}}">
    <!-- CSS path fix -->
    <meta name="keywords" content="{{meta.keywords}}">

    <!-- Search Engine Blocking (but allow social media previews) -->
    <meta name="robots" content="noindex, nofollow, noarchive, nosnippet">
    <meta name="googlebot" content="noindex, nofollow, noarchive, nosnippet">
    <meta name="bingbot" content="noindex, nofollow, noarchive, nosnippet">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://bergbau-cham.de/">
    <meta property="og:title" content="{{meta.title}}">
    <meta property="og:description" content="{{meta.description}}">
    <meta property="og:image" content="https://bergbau-cham.de/assets/images/og/og-image.jpg">
    <meta property="og:image:secure_url" content="https://bergbau-cham.de/assets/images/og/og-image.jpg">
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta property="og:image:alt" content="{{meta.title}}">
    <meta property="og:site_name" content="Bergbau Cham">
    <meta property="og:locale" content="{{#if isFrench}}fr_FR{{else}}en_US{{/if}}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://bergbau-cham.de/">
    <meta property="twitter:title" content="{{meta.title}}">
    <meta property="twitter:description" content="{{meta.description}}">
    <meta property="twitter:image" content="https://bergbau-cham.de/assets/images/og/og-image.jpg">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="./assets/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="./assets/favicon/favicon.svg" />
    <link rel="shortcut icon" href="./assets/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="./assets/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="./assets/favicon/site.webmanifest" />

    <!-- Local Tailwind CSS with embedded fonts -->
    <link rel="stylesheet" href="./styles.css">
</head>
<body class="font-sans-body text-gray-900">

    <!-- Header -->
    <header class="absolute w-full top-0 z-50">
        <nav class="container mx-auto px-8 lg:px-16 py-6 flex justify-between items-center">
            <a href="#home" class="flex items-center">
                <img src="./assets/images/logo/logo_white.svg" alt="Bergbau Cham Logo" class="h-10 w-auto">
            </a>
            <div class="hidden md:flex items-center space-x-8">
                <ul class="flex space-x-8">
                    <li><a href="#contact" class="text-white hover:text-orange-500 transition">{{nav.contact}}</a></li>
                </ul>
                <a href="quote.html" class="ml-4 px-6 py-2 bg-transparent border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-gray-900 transition">
                    {{nav.quote}}
                </a>

                <!-- Language Switcher -->
                <div class="relative ml-6">
                    <button onclick="toggleLanguageDropdown(event)" class="flex items-center space-x-2 px-3 py-2 rounded-lg hover:bg-white/10 transition">
                        <img src="./assets/images/flags/gb.svg" alt="English" class="w-5 h-auto">
                        <svg id="langDropdownArrow" class="w-4 h-4 text-white transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </button>
                    <div id="langDropdown" class="absolute right-0 mt-2 w-24 bg-white rounded-lg shadow-lg hidden transition-all duration-200 z-50">
                        <a href="index.html" class="flex items-center space-x-2 px-3 py-2.5 hover:bg-gray-50 bg-gray-50 rounded-t-lg">
                            <img src="./assets/images/flags/gb.svg" alt="English" class="w-5 h-auto">
                            <span class="text-gray-700 font-medium">EN</span>
                        </a>
                        <a href="fr/index.html" class="flex items-center space-x-2 px-3 py-2.5 hover:bg-gray-50 rounded-b-lg">
                            <img src="./assets/images/flags/fr.svg" alt="Français" class="w-5 h-auto">
                            <span class="text-gray-700 font-medium">FR</span>
                        </a>
                    </div>
                </div>
            </div>
            <!-- Mobile menu button -->
            <button class="md:hidden text-white" onclick="toggleMobileMenu()">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </nav>
        <!-- Mobile menu -->
        <div id="mobileMenu" class="hidden md:hidden bg-black/90 backdrop-blur-sm">
            <ul class="px-6 py-4 space-y-2">
                <li><a href="#contact" class="block text-white hover:text-orange-500 transition">{{nav.contact}}</a></li>
                <li class="pt-2">
                    <a href="quote.html" class="block w-full text-center px-6 py-2 bg-transparent border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-gray-900 transition">
                        {{nav.quote}}
                    </a>
                </li>
            </ul>
        </div>
    </header>

    <!-- Hero Section -->
    <section id="home" class="relative h-screen">
        <!-- Hero Background Image -->
        <img class="absolute inset-0 w-full h-full object-cover"
             src="./assets/images/hero/hero.jpg"
             alt="Bergbau Cham Hero">

        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-transparent to-black/80"></div>

        <!-- Content Container -->
        <div class="relative h-full flex items-end">
            <div class="container mx-auto px-8 lg:px-16 pb-16 lg:pb-24">
                <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-8">
                    <!-- Text Content -->
                    <div class="max-w-3xl">
                        <h1 class="text-white text-4xl md:text-5xl lg:text-6xl font-sans-body font-light mb-6">
                            {{{hero.title}}}
                        </h1>
                        <p class="text-white text-base md:text-lg font-sans-body font-light leading-relaxed max-w-2xl">
                            {{hero.description}}
                        </p>
                    </div>

                    <!-- CTA Button -->
                    <div class="md:mb-2">
                        <a href="#contact"
                           class="inline-block bg-white text-gray-900 font-sans-body font-semibold uppercase tracking-wider text-sm px-8 py-4 hover:bg-gray-100 transition-colors duration-300">
                            {{hero.cta}}
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-20 bg-gray-50">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
                <div>
                    <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-8">
                        {{about.title}}
                    </h2>
                    <p class="text-lg text-gray-700 mb-6 leading-relaxed">
                        {{about.paragraph1}}
                    </p>
                    <p class="text-lg text-gray-700 mb-8 leading-relaxed">
                        {{about.paragraph2}}
                    </p>
                    <div class="grid grid-cols-2 gap-6">
                        <div class="text-center">
                            <h3 class="text-3xl font-bold text-orange-500 mb-2">{{about.stats.years}}</h3>
                            <p class="text-gray-600">{{about.stats.years_label}}</p>
                        </div>
                        <div class="text-center">
                            <h3 class="text-3xl font-bold text-orange-500 mb-2">{{about.stats.countries}}</h3>
                            <p class="text-gray-600">{{about.stats.countries_label}}</p>
                        </div>
                    </div>
                </div>
                <div>
                    <img src="./assets/images/about/mining-operations.jpg" alt="Mining Operations" class="rounded-lg shadow-lg">
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20 bg-white">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="text-center mb-16">
                <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-6">{{services.title}}</h2>
                <p class="text-xl text-gray-600 max-w-3xl mx-auto">
                    {{services.description}}
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                <div class="bg-gray-50 p-8 rounded-lg">
                    <div class="w-16 h-16 bg-orange-500 rounded-lg flex items-center justify-center mb-6">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 11.172V5l-1-1z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{services.heavy_machinery.title}}</h3>
                    <p class="text-gray-600">
                        {{services.heavy_machinery.description}}
                    </p>
                </div>

                <div class="bg-gray-50 p-8 rounded-lg">
                    <div class="w-16 h-16 bg-orange-500 rounded-lg flex items-center justify-center mb-6">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{services.crushers.title}}</h3>
                    <p class="text-gray-600">
                        {{services.crushers.description}}
                    </p>
                </div>

                <div class="bg-gray-50 p-8 rounded-lg">
                    <div class="w-16 h-16 bg-orange-500 rounded-lg flex items-center justify-center mb-6">
                        <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-4">{{services.support.title}}</h3>
                    <p class="text-gray-600">
                        {{services.support.description}}
                    </p>
                </div>
            </div>
        </div>
    </section>

    <!-- Partners Section -->
    <section id="partners" class="py-20 bg-gray-900">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="text-center mb-16">
                <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">{{partners.title}}</h2>
                <p class="text-xl text-gray-300 max-w-3xl mx-auto">
