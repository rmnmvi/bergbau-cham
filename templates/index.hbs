            </div>
        </div>
    </section>

    <!-- Contact CTA Section -->
    <section id="contact" class="py-20 bg-gray-900">
        <div class="container mx-auto px-8 lg:px-16">
            <div class="text-center max-w-4xl mx-auto">
                <h2 class="text-3xl lg:text-4xl font-bold text-white mb-6">{{cta.title}}</h2>
                <p class="text-xl text-gray-300 mb-10">
                    {{cta.description}}
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                    <a href="{{#if isFrench}}/fr/contact.html{{else}}/contact.html{{/if}}"
                       class="bg-orange text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-orange-dark transition transform hover:scale-105 inline-block">
                        {{cta.contact_button}}
                    </a>
                    <a href="{{#if isFrench}}/fr/quote.html{{else}}/quote.html{{/if}}"
                       class="border-2 border-orange text-orange px-8 py-4 rounded-lg font-semibold text-lg hover:bg-orange hover:text-white transition inline-block">
