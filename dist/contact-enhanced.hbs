        @import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap');
        .font-sans-body { font-family: 'Open Sans', sans-serif; }
        .btn-primary {
            background-color: #D4AF37;
            color: #111827;
            padding: 16px 32px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 16px;
            transition: all 0.2s;
            display: inline-block;
            text-align: center;
            width: 100%;
        }
